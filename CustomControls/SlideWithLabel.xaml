<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp01.CustomControls.SlideWithLabel" x:Name="this">
    <StackLayout  BindingContext="{x:Reference this}">
        <Label x:Name="label" Text="{Binding LabelText}" FontSize="15" Margin="10, 10, 14, 10"/>
        <Slider x:Name="slider" Value="{Binding ValueOfTheSlider}"  Maximum="99"/>
    </StackLayout>
</ContentView>
